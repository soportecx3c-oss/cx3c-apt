<group name="local,syslog,sshd,">

  <rule id="100001" level="5">
    <if_sid>5716</if_sid>
    <srcip>1.1.1.1</srcip>
    <description>sshd: authentication failed from IP 1.1.1.1.</description>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>

</group>

<group name="syslog,ipfw,">
  <rule id="150000" level="0">
    <decoded_as>ipfw</decoded_as>
    <description>IPFW custom app group.</description>
  </rule>

  <rule id="150001" level="12">
    <if_sid>150000</if_sid>
    <action>ESTABLISHED-CONNECTION</action>
    <description>Check out $(action) on firewall pfsense</description>
  </rule>
</group>

<group name="pfsense, firewall, easyrule,">

  <rule id="200000" level="3">
    <decoded_as>pfsense-base</decoded_as>
    <description>pfSense EasyRule Configuration Change event.</description>
    <group>config_change, access_control,</group>
  </rule>

  <rule id="200001" level="10">
    <if_sid>200000</if_sid>
    <regex>Blocked \S+ via EasyRule</regex>
    <description>PFsense EasyRule: IP Address $(srcip) has been Blocked.</description>
    <mitre>
      <id>T1562</id> <id>T1083</id> </mitre>
  </rule>

  <rule id="200002" level="5">
    <if_sid>200000</if_sid>
    <regex>Unblocked \S+ via EasyRule</regex>
    <description>PFsense EasyRule: IP Address $(srcip) has been Unblocked.</description>
  </rule>

</group>

<group name="local,">
  <rule id="100502" level="0">
    <if_sid>61071</if_sid>
    <match field="win.system.message">[CLIENT: &lt;local machine&gt;]</match>
    <description>Ignorar MS SQL logon failure con CLIENT local</description>
  </rule>

  <rule id="100503" level="0">
    <if_sid>61071</if_sid>
    <match field="win.system.message">CLIENT: fe80::</match>
    <description>Ignorar MS SQL logon failure con CLIENT link-local</description>
  </rule>
</group>
